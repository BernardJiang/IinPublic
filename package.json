{
  "name": "iinpublic",
  "version": "1.0.0",
  "description": "IinPublic - Location-Based Chatbot Matching & Talk System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:server\"",
    "dev:web": "webpack serve --mode development --config webpack.config.js",
    "dev:server": "tsx watch src/server/index.ts",
    "build": "npm run build:web && npm run build:server && npm run build:android",
    "build:web": "webpack --mode production --config webpack.config.js",
    "build:server": "tsc -p src/server/tsconfig.json",
    "build:android": "cd android && ./gradlew assembleDebug",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:type": "tsc --noEmit",
    "test:all": "npm run test:type && npm run test:coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "android:clean": "cd android && ./gradlew clean",
    "android:build": "cd android && ./gradlew assembleDebug",
    "android:install": "cd android && ./gradlew installDebug",
    "android:run": "npm run android:build && npm run android:install"
  },
  "keywords": [
    "chatbot",
    "location",
    "matching",
    "decentralized",
    "gun.js",
    "p2p"
  ],
  "author": "IinPublic Team",
  "license": "MIT",
  "dependencies": {
    "bad-words": "^3.0.4",
    "compromise": "^14.14.0",
    "cors": "^2.8.5",
    "express": "^4.19.0",
    "gun": "^0.2020.1241",
    "helmet": "^7.1.0",
    "node-geocoder": "^4.4.0",
    "rate-limiter-flexible": "^5.0.3",
    "socket.io": "^4.8.0",
    "socket.io-client": "^4.8.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "eslint": "^8.55.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
